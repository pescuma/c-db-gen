		data = ($struct.name *) rec->viewPtr();
	}
	
	void write()
	{
		if (rec->lockLevel() == 4)
			return;
		
		if (rec->lockLevel() == 2)
			rec->release();
		
		data = ($struct.name *) rec->lockPtr();
	}
	
